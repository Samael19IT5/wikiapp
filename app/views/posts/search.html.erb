<h1>Posts</h1>
<div class="row justify-content-md-end">
  <div class="col-3">
    <form action="/posts/search">
      <div class="input-group mb-3 ">
        <input type="text" class="form-control col-xs-3" name="vls" aria-label="Search" aria-describedby="button-addon">
        <button class="btn btn-dark" type="submit" id="button-addon">Search</button>
      </div>
    </form>
  </div>
</div>

<table class="table table-striped">
  <thead class="table-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Title</th>
    <th scope="col">Content</th>
    <th scope="col">Category</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% index = 1 %>
  <% @posts.each do |post| %>
    <tr>
      <th scope="row">
        <%= index %></th>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.category.title %></td>
      <td>
        <%= link_to "Show", post, class: 'btn btn-primary mx-2' %>
        <%= link_to "Edit", edit_post_path(post), class: 'btn btn-success mx-2' %>
        <%= link_to "Destroy", post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mx-2' %>
      </td>
    </tr>
    <% index += 1 %>
  <% end %>

  </tbody>
</table>
<%= link_to "New Post", new_post_path, class: 'btn btn-dark' %>
<%= link_to "Categories", categories_path, class: 'btn btn-dark' %>
