<%= form_with model: category do |form| %>
  <div>
    <%= form.label :title, class: "col-form-label" %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :description, class: "col-form-label" %><br>
    <%= form.text_area :description, class: "form-control" %><br>
  </div>

  <div>
    <%= form.label :category_type, class: "col-form-label" %><br>
    <%= form.select :category_type, Category.category_types.keys, class: "form-control" %>
  </div>

  <br>
  <div>
    <%= form.submit :Create, class: "btn btn-dark" %>
  </div>
<% end %>
