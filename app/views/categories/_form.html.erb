<%= form_with model: category  do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
  </div>

  <div>
    <%= form.label :category_type %><br>
    <%= form.select :category_type, Category.category_types.keys %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
