<h1>Categories</h1>
<div class="row justify-content-md-end">
  <div class="col-3">
    <form action="/categories/search">
      <div class="input-group mb-3 ">
        <input type="text" class="form-control col-xs-3" name="vls" aria-label="Search" aria-describedby="button-addon">
        <button class="btn btn-dark" type="submit" id="button-addon">Search</button>
      </div>
    </form>
  </div>
</div>
<table class="table table-striped">
  <thead class="table-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Title</th>
    <th scope="col">Content</th>
    <th scope="col">Type</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% index = 1 %>
  <% @categories.each do |category| %>
    <tr>
      <th scope="row">
        <%= index %></th>
      <td><%= category.title %></td>
      <td><%= category.description %></td>
      <td><%= category.category_type %></td>
      <td>
        <%= link_to "Show", category, class: 'btn btn-primary mx-2' %>
        <%= link_to "Edit", edit_category_path(category), class: 'btn btn-success mx-2' %>
        <%= link_to "Destroy", category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mx-2' %>
      </td>
    </tr>
    <% index += 1 %>
  <% end %>

  </tbody>
</table>
<%= link_to "New Category", new_category_path, class: 'btn btn-dark' %>
<%= link_to "Posts", posts_path, class: 'btn btn-dark' %>
